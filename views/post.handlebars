<div class="text-center">
  <h2>{{name}}</h2>
  <p>{{{get_emoji}}}</p>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_created}}</p>
    <p>{{comments}}</p>
  <p>
    <p id="commentField">Comments</p>
    <span class="comment-content">
    {{#each comments}}
    <div class="comment">
    <p>{{comment_content}}</p>
    </div>
    {{/each}}
    </span>
    <button class="btn btn-primary">Post a Comment!</button>
  </p>
</div>
  <script src="/js/comment.js"></script>